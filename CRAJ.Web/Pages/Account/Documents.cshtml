@page
@model CRAJ.Web.Pages.Account.DocumentsModel

@{
    ViewBag.Title = "Documents";
    Layout = "~/Pages/Shared/_Account.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Document List</h2>
        </div>
        <div class="col-6" style="text-align:end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp;Ajouter un document
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Genre</th>
                <th>Date de Naissance</th>
                <th>Lieu de Naissance</th>
                <th>Date de Création</th>
                <th>Lieu de Création</th>
                <th>Type</th>
                <th>Opération</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Documents)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.NomPersonne</td>
                    <td>@obj.PrenomPersonne</td>
                    <td>@obj.Genre</td>
                    <td>@obj.DateNaissance.ToString("d")</td>
                    <td>@obj.LieuCreation</td>
                    <td>@obj.DateCreation.ToString("d")</td>
                    <td>@obj.LieuCreation</td>
                    <td>@obj.Type</td>
                    <td>
                        <div class="w-75 btn-group" role="group">

                        <a asp-page="Imprimer" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="fa-solid fa-print"></i>
                        </a>
                        <a asp-page="Delete" class="btn btn-danger mx-2">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>